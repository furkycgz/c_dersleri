    // database baÄŸlantÄ±sÄ± iÃ§in gerekli kÃ¼tÃ¼phaneler
    .h da sql baÄŸlantÄ±sÄ± iÃ§in : private : Ui::MainWindow *ui;
QSqlDatabase db;
QSqlQuery *sorgu, *ekleme;
QSqlQueryModel *model;
